/* pages/show/show.wxss */
.page__container {
  min-height: 100vh;
  padding-top: 0rpx;
  padding-bottom: 150rpx;
  width: 95vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  background-color: white;
}

.banner-card {
  width: 100%;
  margin: 0 auto;
}

.top-section {
  display: flex;
  justify-content: left;
  align-items: center;
  background-color: white;
  margin: 0rpx;
  width: 100vw;
  height: 7vh;
  /* border-bottom: 3rpx solid #cfcfcf; */
  padding: 20rpx;
}

.top-section .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.top-section .h1 {
  font-style: bold;
  font-size: 40rpx;
  text-align: bottom;
}

.top-img{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 5rpx;
  right: -10rpx;
}

image {
  display: block;
  border-radius: 5rpx;
  width: 100%;
  height: 500rpx;
}


.mid-section {
  display: flex;
  justify-content: left;
  align-items: left;
  flex-direction: column;
  background-color: white;
  margin: 0rpx;
  border-bottom: 3rpx solid #cfcfcf;
}

.mid-section .info {
  display: flex;
  justify-content: left;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
}

.picker-img {
  margin-right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.bottom-section {
  display: flex;
  justify-content: left;
  align-items: left;
  padding: 20rpx;
  flex-direction: column;
  background-color: white;
  margin: 0rpx;
}

.bottom-section .content-title {
  margin-bottom: 20rpx;
}

.bottom-section .event-content {
  text-align: left;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0px;
  height: 120rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.footer button {
  margin: 0rpx;
}

.icon-card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.icon-card .icon {
  margin: 5rpx;
  width: 60rpx;
  height: 60rpx;
}
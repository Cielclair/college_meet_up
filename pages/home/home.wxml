    <view class="event_card-infos">
      <view class = "h2">Happy Coding Hour</view>
      <view class = "p">2019年12月10日14:00</view>
      <view class = "p">软件产业基地4栋B座裙楼1楼One Piece Work</view>
      </view>
    <image  class = "avatar" mode = "aspectFill" src = "../../image/avatar.jpg" />
    <image class = "button_save" src = "../../image/save.png" />
    </view>
  </view>
</view>
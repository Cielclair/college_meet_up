.page__container {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fafafa;
  min-height: 100vh;
}

.form-flexbox {
  height: 100rpx;
  width: 95%;
  margin: 20rpx 0;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color:white;
  font-weight: lighter;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.input {
  text-align: right;
  width: 70%;
}

.title {
  width: 30%;
}
